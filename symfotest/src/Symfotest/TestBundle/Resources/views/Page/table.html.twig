{% extends '::base.html.twig' %}
{% block body %}
    {% javascripts '@SymfotestTestBundle/Resources/public/js/*' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <div class="table-container">
        {% include 'SymfotestTestBundle:Page:only_table.html.twig' %}
    </div>
    {%  if error is defined %}
        <h3>test{{ error }}</h3>
    {% endif %}
    {% if form is defined %}
        <form class="comment-form" action="{{ path('show_all') }}" method="post" {{ form_enctype(form) }}>
            <div class="form-group">
                <label>Author Name</label>
                {{ form_widget(form.author) }}
            </div>
            <div class="form-group">
                <label>Website</label>
                {{ form_widget(form.site) }}
            </div>
            <div class="form-group">
                <label>Comment</label>
                {{ form_widget(form.comment) }}
            </div>
            <div class="form-group">
                <label>Rating</label>
                {{ form_widget(form.rating) }}
            </div>
            <button type="submit" class="btn btn-default submit-form">Submit</button>
        </form>

        <div id="dialog" title="Basic dialog">
        </div>


    {% endif %}
    {#========================================================================#}
{% endblock %}